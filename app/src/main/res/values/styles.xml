<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_default</item>
    </style>

    <style name="ButtonAzure">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_azure</item>
    </style>

    <style name="ButtonCircle">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_circle</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorDarkBlue</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="colorControlNormal">@color/colorDarkBlue</item>
        <item name="colorControlActivated">@color/colorDarkBlue</item>
    </style>

</resources>
